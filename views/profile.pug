doctype html
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  title CongreGeek
  meta(name='viewport', content='width=device-width, initial-scale=1')
  link(rel='stylesheet', type='text/css', media='screen', href='/css')
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.5/css/bulma.min.css')
  link(href='https://fonts.googleapis.com/css?family=Bangers|Jura&display=swap', rel='stylesheet')
  script(src='https://code.jquery.com/jquery.js')
  script(src="/js/members.js")
nav.navbar.is-white.is-fixed-top.topNav
  .container
    .navbar-brand
      a.navbar-item(href=`/`)
        img(src='../images/congregeeklogo.png', width='100', height='20')
      .navbar-burger.burger(data-target='topNav')
        span
        span
        span
    #topNav.navbar-end
      .navbar-start
        a.navbar-item(href=`/members`) Home
        a.navbar-item(href='/members') Fellow Geeks
        a.navbar-item(href='logout') Log Out
      .navbar-end
        .navbar-item
          .field.is-grouped
            p.control
section.hero.is-success.is-fullheight
  br
  .hero-body
    .column
    .box
      .container.has-text-centered
        .columns.is-vcentered
          .column.is-5
            figure.profile-pic
              img(src=`${users.profile}`, width='200', height='200')
          .column.is-6.is-offset-1
            h1#profile-title.title.is-2 #{users.username}
            h2#profile-subtitle.subtitle.is-4
              | Interests: Marvel, Comic Books, Movies
            br
            h5 Email: #{users.email}
    .column