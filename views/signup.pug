                  .control
                    input#username-input.input.is-small(type='form-control', placeholder='Username', name='reqUser', autofocus='')
                .field
                  .control
                    input#password-input.input.is-small(type='password', placeholder='Password', autofocus='', name='reqPassword', required='')
                .field
                  .control
                    input#email-input.input.is-small(type='form-control', placeholder='email', autofocus='', name='reqEmail', required='')
                .field
                  .control
                    input#age-input.input.is-small(type='form-control', placeholder='Age', autofocus='')
                .field
                  .control
                    input#profile-input.input.is-small(type='form-control', placeholder='Your Photo/Avatar', autofocus='')
              h4.subtitleBlack Who is your Favorite Hero/Superhero?
                .field
                  .control
                    input#hero-input.input.is-small(type='form-control', placeholder='Superman, Batman, Spiderman', autofocus='')
              h4.subtitleBlack What is your favorite Movie?
                .field
                  .control
                    input#movie-input.input.is-small(type='form-control', placeholder='Favorite Movie', autofocus='')
              h4.subtitleBlack If you could live in any fantasy world, what would it be?
                .field
                  .control
                    input#world-input.input.is-small(type='form-control', placeholder='Narnia, midgar,spira,', autofocus='')
                button#submit.button.is-block.is-info.is-medium.is-fullwidth(type='submit', onclick="window.location.href = 'members';") Sign up!
